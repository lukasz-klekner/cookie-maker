<h1>Configure your cookie</h1>

<h2>Select cookie base</h2>
{{> base-selector}}

<h2>Select cookie addons</h2>
{{#each addons}}
    {{#if (isNotInArray @root.cookie.addons this.[0])}}
        <a href="/configurator/add-addon/{{this.[0]}}">Add {{this.[0]}} for {{this.[1]}} PLN</a>
    {{/if}}
{{/each}}

{{#if cookie.base}}
    {{> cookie-preview}}
    {{> addons}}
{{else}}
    <p><strong>Please select base of your cookie to see its preview and price summary.</strong></p>
    <p>{{> base-selector}}</p>
{{/if}}